generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  pseudonym String
  createdAt DateTime @default(now())
  addresses WatchedAddress[]
}

model WatchedAddress {
  id           String   @id @default(cuid())
  userId       String
  address      String
  chain        String   @default("ethereum")
  label        String   @default("")
  instructions String   @default("")
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])
  alerts       Alert[]
}

model Alert {
  id        String   @id @default(cuid())
  addressId String
  txHash    String
  fromAddr  String
  toAddr    String
  amount    String
  asset     String   @default("ETH")
  chain     String   @default("ethereum")
  status    String   @default("sent")
  createdAt DateTime @default(now())
  address   WatchedAddress @relation(fields: [addressId], references: [id])
}
